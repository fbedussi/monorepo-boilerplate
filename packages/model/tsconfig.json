{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"],
    "declaration": true,
    "outDir": "build",
    "declarationDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
